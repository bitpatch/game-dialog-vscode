{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Game Dialog Script",
  "scopeName": "source.gds",
  "patterns": [
    { "include": "#comments" },
    { "include": "#dialog-output" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.gds",
          "match": "#.*$"
        }
      ]
    },
    "dialog-output": {
      "patterns": [
        {
          "name": "keyword.control.dialog.gds",
          "begin": "^\\s*(<<|>>)\\s*\"",
          "end": "\"",
          "beginCaptures": {
            "1": { "name": "keyword.operator.dialog.gds" }
          },
          "contentName": "string.quoted.dialog.gds",
          "patterns": [
            { "include": "#string-interpolation" },
            {
              "name": "constant.character.escape.gds",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "keyword.control.dialog.gds",
          "match": "^\\s*(<<|>>)\\s*(.*)$",
          "captures": {
            "1": {
              "name": "keyword.operator.dialog.gds"
            },
            "2": {
              "name": "string.quoted.dialog.gds"
            }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.gds",
          "match": "\\b(if|else|while|for|each|is)\\b"
        },
        {
          "name": "keyword.operator.logical.word.gds",
          "match": "\\b(not|or|and|xor)\\b"
        },
        {
          "name": "constant.language.gds",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.gds",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "include": "#string-interpolation" },
            {
              "name": "constant.character.escape.gds",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.gds",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.gds",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "string-interpolation": {
      "patterns": [
        {
          "name": "meta.embedded.line.gds",
          "begin": "\\{",
          "end": "\\}",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.template-expression.begin.gds" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.template-expression.end.gds" }
          },
          "patterns": [
            { "include": "#keywords" },
            { "include": "#operators" },
            { "include": "#numbers" },
            { "include": "#variables" }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.gds",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.gds",
          "match": "(==|!=|<=|>=|<<|>>|<|>)"
        },
        {
          "name": "keyword.operator.assignment.gds",
          "match": "="
        },
        {
          "name": "keyword.operator.arithmetic.gds",
          "match": "(\\+|-|\\*|/)"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.gds",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
